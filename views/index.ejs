<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/reset-css@5.0.1/reset.min.css">
  <link rel="stylesheet" href="/public/index.css">
  <title>Document</title>
</head>
<body>
  <div class="global">
    <div class="login-from">
      <div class="login-title">Login</div>
      <form action="/" method="POST">
        <div class="login-input-area">
          <input class="login-input id" placeholder="ID" name="id">
          <input class="login-input pw" placeholder="Password" name="pw">
        </div>
        <div class="login-btn-area">
          <button class="btn login-btn">Login</button>
        </div>
      </form>
      <form action="/join" method="GET">
        <div class="join">
          <span>Need a new account</span>
          <a href="join">join</a>
        </div>
      </form>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script>
    $('.btn').click(function(){
      $.ajax({
        method : 'POST',
        url : '/',
        data : {id : String($('.id').val()), pw : String($('.pw').val())},
      }).done((결과) => {
        window.location.replace('/login_success')
      }).fail((xhr,code,err) => {
        alert(xhr.responseJSON.message.message)
        window.location.replace('/')
      })
    })
  </script>
</body>
</html>